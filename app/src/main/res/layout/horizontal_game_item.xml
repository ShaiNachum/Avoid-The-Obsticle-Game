<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="40dp"
        android:elevation="@dimen/margin_default"
        app:cardElevation="@dimen/margin_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/game_CARD_data"
        app:layout_constraintStart_toStartOf="@+id/game_CARD_data"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_IMG_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/spaceship"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/game_CARD_data"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="40dp"
        android:elevation="8dp"
        app:cardElevation="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="90dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/game_LBL_playerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:minLines="2"
                tools:text="Name:"
                android:layout_marginTop="40dp"
                android:layout_marginStart="@dimen/margin_default"
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@color/yellow_500"
                 />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/game_LBL_playerScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/game_LBL_playerName"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                android:textColor="@color/yellow_500"
                android:textSize="20sp"
                android:textStyle="italic"
                tools:text="Score:" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>