<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_default"
    android:layout_marginBottom="@dimen/margin_default">

    <androidx.cardview.widget.CardView
        android:id="@+id/game_CARD_data"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="40dp"
        android:elevation="8dp"
        app:cardElevation="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_default">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/game_LBL_playerPlace"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                tools:text="#"
                android:layout_marginStart="40dp"
                android:layout_centerVertical="true"
                android:textSize="40sp"
                android:textStyle="italic"
                android:textColor="@color/green_500"
                />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/game_LBL_playerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Name:"
                android:layout_marginStart="120dp"
                android:layout_marginTop="@dimen/margin_default"
                android:textSize="25sp"
                android:textStyle="italic"
                android:textColor="@color/yellow_500"
                 />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/game_LBL_playerScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/game_LBL_playerName"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="120dp"
                android:textColor="@color/yellow_500"
                android:textSize="25sp"
                android:textStyle="italic"
                tools:text="Score:" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_BTN_location"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/location" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>